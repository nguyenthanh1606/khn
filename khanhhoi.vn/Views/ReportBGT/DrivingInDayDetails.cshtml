                                        <li><a href="#" class="small" data-value="option5" tabIndex="-1"><input type="checkbox" />&nbsp;29C84566</a></li>
                                        <li><a href="#" class="small" data-value="option6" tabIndex="-1"><input type="checkbox" />&nbsp;29C84562</a></li>
                                    </ul>
                                    <script>
                                var options = [];
                                $('.dropdown-menu a').on('click', function (event) {

                                    var $target = $(event.currentTarget),
                                        val = $target.attr('data-value'),
                                        $inp = $target.find('input'),
                                        idx;

                                    if ((idx = options.indexOf(val)) > -1) {
                                        options.splice(idx, 1);
                                        setTimeout(function () { $inp.prop('checked', false) }, 0);
                                    } else {
                                        options.push(val);
                                        setTimeout(function () { $inp.prop('checked', true) }, 0);
                                    }

                                    $(event.target).blur();

                                    console.log(options);
                                    return false;
                                });
                                    </script>
                                </div>
                            </div>
                        </div>
